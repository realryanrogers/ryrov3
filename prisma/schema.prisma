generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("NEXT_PUBLIC_DATABASE_URL")
  shadowDatabaseUrl = env("NEXT_PUBLIC_SHADOW_DATABASE_URL")
}

model WeighIn {
  id Int @id @default(autoincrement())
  date DateTime @db.Date @unique
  weight Float
}

model FinishLocation {
  id Int @id @default(autoincrement())
  code String @unique
  name String 
  finishes Finish[]
}

model Finish {
  id Int @id @default(autoincrement())
  finishLocationId Int
  location FinishLocation @relation(fields: [finishLocationId], references: [id])
  encounter Encounter? @relation(fields: [encounterid], references: [id])
  encounterid Int?
  rating Int
  volume Int
  strength Int
}

model Encounter {
  id Int @id @default(autoincrement())
  finishId Int?
  finish Finish[] @relation()
  datetime DateTime @db.DateTime
  party Int
  TimeElapsed Int
  enhanced Boolean
  intensity Int
  rating Int
  notes String? @db.Text
  activities EncounterActivities[]
  positions EncounterPositions[]
}

model EncounterActivities {
  id Int @id @default(autoincrement())
  code String @unique
  name String
  encounter Encounter[]
}

model EncounterPositions {
  id Int @id @default(autoincrement())
  code String @unique
  name String
  encounter Encounter[]
}

model Poop {
  id Int @id @default(autoincrement())
  datetime DateTime @db.DateTime
  volume Int
  difficulty Int
  hardness Int
}